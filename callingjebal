  <script>
    // === ì„¤ì • ===
    const MODEL_URL = "https://teachablemachine.withgoogle.com/models/gSHOySjax/";
    const BAD_LABELS = ["ê¹”ë¼ë§Œì”¨", "ìˆ˜ë°•ì”¨", "ì•„ì´ì”¨"];
    const THRESHOLD = 80;

    let classifier = null;

    window.addEventListener("DOMContentLoaded", () => {
      const camBtn = document.getElementById("camBtn");
      const micBtn = document.getElementById("micBtn");
      const endBtn = document.getElementById("endBtn");
      const localVideo = document.getElementById("localVideo");
      const audioStatus = document.getElementById("audioStatus");

      // ì¹´ë©”ë¼
      camBtn.onclick = async () => {
        try {
          const stream = await navigator.mediaDevices.getUserMedia({ video: true, audio: false });
          localVideo.srcObject = stream;
        } catch (err) {
          console.error(err);
          alert("ì¹´ë©”ë¼ë¥¼ ì¼¤ ìˆ˜ ì—†ìŠµë‹ˆë‹¤: " + err.message);
        }
      };

      // ë§ˆì´í¬ + ëª¨ë¸
      micBtn.onclick = async () => {
        micBtn.textContent = "ğŸ™ ë§í•˜ëŠ” ì¤‘...";
        micBtn.style.background = "#f97316";
        try {
          await navigator.mediaDevices.getUserMedia({ audio: true });
          audioStatus.textContent = "ë§ˆì´í¬: ì¼œì§ (ìˆ˜ì‹  ì¤‘)";
          initClassifier();  // ğŸ”´ ì´ë•Œ ëª¨ë¸ ë¡œë“œ
        } catch (err) {
          console.error(err);
          audioStatus.textContent = "ë§ˆì´í¬: ê¶Œí•œ ê±°ë¶€ë¨";
          alert("ë§ˆì´í¬ ê¶Œí•œì„ í—ˆìš©í•´ ì£¼ì„¸ìš”!");
        }
      };

      endBtn.onclick = () => {
        micBtn.textContent = "ğŸ™ ë§í•˜ê¸° ì‹œì‘";
        micBtn.style.background = "#0f766e";
        audioStatus.textContent = "ë§ˆì´í¬: ëŒ€ê¸°";
        if (classifier && typeof classifier.classifyStop === "function") {
          classifier.classifyStop();
        }
      };
    });

    // === ml5 ë¶ˆëŸ¬ì˜¤ê¸° ===
    function initClassifier() {
      const options = { probabilityThreshold: 0.0 };
      // ğŸ”´ ì´ ë²„ì „ì—ì„œëŠ” ë¦¬í„´ê°’ì— ë¶„ë¥˜ê¸°ê°€ ë‹´ê¸°ê³ , ì½œë°±ì€ "ì¤€ë¹„"ë§Œ ì•Œë ¤ì¤€ë‹¤ê³  ë³´ë©´ ëœë‹¤
      classifier = ml5.soundClassifier(MODEL_URL + "model.json", options, modelReady);
    }

    async function modelReady() {
      console.log("âœ… ëª¨ë¸ ë¡œë“œ ì½œë°± í˜¸ì¶œë¨");
      // ì¼ë¶€ ë²„ì „ì€ readyë¼ëŠ” Promiseë¥¼ ê°–ê³  ìˆìŒ
      if (classifier && classifier.ready && typeof classifier.ready.then === "function") {
        await classifier.ready;
      }
      startClassification();
    }

    function startClassification() {
      if (!classifier) {
        console.error("âŒ classifierê°€ ì—†ìŠµë‹ˆë‹¤.");
        return;
      }

      // 1) ì¼ë°˜ì ì¸ ml5 ìŠ¤íƒ€ì¼
      if (typeof classifier.classify === "function") {
        console.log("â–¶ classifier.classify(...) ì‚¬ìš©");
        classifier.classify(gotResult);
      }
      // 2) ë„¤ê°€ ì²˜ìŒ ì½˜ì†”ì—ì„œ ë³¸ ìŠ¤íƒ€ì¼ (classifyStartë§Œ ìˆëŠ” ê²½ìš°)
      else if (typeof classifier.classifyStart === "function") {
        console.log("â–¶ classifier.classifyStart(...) ì‚¬ìš©");
        classifier.classifyStart(gotResult);
      }
      // 3) ë‘˜ ë‹¤ ì—†ìœ¼ë©´ êµ¬ì¡° ì°ê¸°
      else {
        console.error("âŒ ì´ classifierì—ëŠ” classify/ classifyStartê°€ ì—†ìŠµë‹ˆë‹¤. êµ¬ì¡°ë¥¼ í™•ì¸í•˜ì„¸ìš”:", classifier);
      }
    }

    function gotResult(error, results) {
      if (error) {
        console.error(error);
        return;
      }
      if (!results || results.length === 0) return;

      console.log("ğŸ¯ ê²°ê³¼:", results);
      updateUI(results);
    }

    function updateUI(results) {
      const labelEl = document.getElementById("currentLabel");
      const alertBox = document.getElementById("alertBox");
      const audioStatus = document.getElementById("audioStatus");

      const best = results[0];
      const bestLabel = best.label;
      const bestConf = (best.confidence * 100).toFixed(1);

      labelEl.textContent = `${bestLabel} (${bestConf}%)`;
      audioStatus.textContent = "ë§ˆì´í¬: ìˆ˜ì‹  ì¤‘";

      const barIds = [
        { name: "bar-1-name", val: "bar-1-val", fill: "bar-1-fill" },
        { name: "bar-2-name", val: "bar-2-val", fill: "bar-2-fill" },
        { name: "bar-3-name", val: "bar-3-val", fill: "bar-3-fill" },
        { name: "bar-4-name", val: "bar-4-val", fill: "bar-4-fill" },
      ];

      results.slice(0, 4).forEach((r, i) => {
        const pct = (r.confidence * 100).toFixed(1);
        const nameEl = document.getElementById(barIds[i].name);
        const valEl = document.getElementById(barIds[i].val);
        const fillEl = document.getElementById(barIds[i].fill);

        nameEl.textContent = r.label;
        valEl.textContent = pct + "%";
        fillEl.style.width = pct + "%";

        if (BAD_LABELS.includes(r.label) && parseFloat(pct) >= THRESHOLD) {
          fillEl.classList.add("danger");
        } else {
          fillEl.classList.remove("danger");
        }
      });

      // ê²°ê³¼ê°€ 4ê°œë³´ë‹¤ ì ìœ¼ë©´ ë‚˜ë¨¸ì§€ 0ìœ¼ë¡œ
      if (results.length < 4) {
        for (let i = results.length; i < 4; i++) {
          const nameEl = document.getElementById(barIds[i].name);
          const valEl = document.getElementById(barIds[i].val);
          const fillEl = document.getElementById(barIds[i].fill);
          nameEl.textContent = "-";
          valEl.textContent = "0%";
          fillEl.style.width = "0%";
          fillEl.classList.remove("danger");
        }
      }

      // ê²½ê³ 
      if (BAD_LABELS.includes(bestLabel) && parseFloat(bestConf) >= THRESHOLD) {
        alertBox.className = "danger";
        alertBox.textContent = `ğŸš¨ ${bestLabel} ê°ì§€ë¨ (${bestConf}%) - ê²½ê³  ì „ì†¡!`;
      } else {
        alertBox.className = "safe";
        alertBox.textContent = "âœ… ì•ˆì „í•œ ë°œí™”ì…ë‹ˆë‹¤.";
      }
    }
  </script>
